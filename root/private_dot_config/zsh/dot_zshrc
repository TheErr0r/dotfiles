#!/bin/env zsh

export ZSH_RC="$ZDOTDIR/rc"

# file matching
setopt EXTENDED_GLOB
setopt NOMATCH

# report status of background
setopt NOTIFY

# set vi mode
bindkey -v

source "$ZSH_RC/zinit.zsh"
source "$ZSH_RC/aliases.sh"
source "$ZSH_RC/completion.zsh"
source "$ZSH_RC/history.zsh"
source "$ZSH_RC/path.zsh"

source "$ZDOTDIR/functions.sh"
source "$ZDOTDIR/programs.sh"

