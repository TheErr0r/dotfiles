#!/bin/env zsh


# enable oh-my-posh
# source: https://ohmyposh.dev/docs/installation/prompt
eval "$(oh-my-posh init zsh --config $OMP_CONFIG_HOME/zen.toml)"

# source zshrc directory
ZSHRC="$ZDOTDIR/zshrc"
source "$ZSHRC/env"
source "$ZSHRC/aliases"
source "$ZSHRC/history"
source "$ZSHRC/zinit"
source "$ZSHRC/completion"

# source programs directory
PROGRAMS="$ZDOTDIR/programs"
source "$PROGRAMS/y"
source "$PROGRAMS/up"
source "$PROGRAMS/eza_tree"

# path
CARGO_PATH="$HOME/.cargo/bin"
path+="$CARGO_PATH"

# file matching
setopt EXTENDED_GLOB
setopt NOMATCH

# report status of background
setopt NOTIFY

# set vi mode
bindkey -v

# fzf
eval "$(fzf --zsh)"

# zoxide
eval "$(zoxide init --cmd j zsh)"
